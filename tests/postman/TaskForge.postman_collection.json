									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is empty (204 or 200 with no body)\", function () {",
									"    if (pm.response.code === 200) {",
									"        pm.expect(pm.response.text()).to.be.empty;",
									"    }",
									"});",
									"",
									"// Extract task ID from request body for subsequent requests",
									"var requestBody = JSON.parse(pm.request.body.raw);",
									"if (requestBody.id) {",
									"    pm.collectionVariables.set(\"createdTaskId\", requestBody.id);",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate a new GUID for the task",
									"function generateGuid() {",
									"    return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {",
									"        var r = Math.random() * 16 | 0,",
									"            v = c == 'x' ? r : (r & 0x3 | 0x8);",
									"        return v.toString(16);",
									"    });",
									"}",
									"",
									"var taskId = generateGuid();",
									"pm.collectionVariables.set(\"createdTaskId\", taskId);",
									"",
									"var requestBody = JSON.parse(pm.request.body.raw);",
									"requestBody.id = taskId;",
									"pm.request.body.raw = JSON.stringify(requestBody);"
								],
								"type": "text/javascript"
							}
						}
					],
